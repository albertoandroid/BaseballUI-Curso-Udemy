<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slideLayoutRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/slideLayoutImageView"
        android:src="@drawable/ic_baseball_intro2"
        android:tint="@color/colorWhite"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/slideLayoutTv1"
        android:layout_below="@+id/slideLayoutImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Hola"
        android:textColor="@color/textColorLight"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/slideLayoutTv2"
        android:layout_below="@+id/slideLayoutTv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/textColorLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/slideLayoutTvPoint1"
        android:layout_marginRight="16dp"
        android:layout_alignRight="@+id/slideLayoutTvPoint2"
        android:layout_alignParentBottom="true"
        android:text="."
        android:textColor="@color/colorTransparentWhite"
        android:textSize="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/slideLayoutTvPoint2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="."
        android:textColor="@color/colorTransparentWhite"
        android:textSize="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/slideLayoutTvPoint3"
        android:layout_marginLeft="16dp"
        android:layout_alignLeft="@+id/slideLayoutTvPoint2"
        android:layout_alignParentBottom="true"
        android:text="."
        android:textColor="@color/colorTransparentWhite"
        android:textSize="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>