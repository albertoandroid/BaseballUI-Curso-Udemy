<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:layout_gravity="center"
    android:background="@drawable/gradient"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:src="@drawable/jugador"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <TextView
            android:paddingTop="8dp"
            android:textStyle="bold"
            android:text="Javier Hernandez"
            android:layout_gravity="center"
            android:textColor="@color/textColorLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingBottom="8dp"
            android:text="Bateador"
            android:layout_gravity="center"
            android:textColor="@color/textColorLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:background="@color/colorGreen"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp">

            <ImageView
                android:src="@drawable/ic_baseball_intro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Puntos"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/colorBlue"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp">

            <ImageView
                android:src="@drawable/ic_baseball_splash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Homerun"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/alertDialogVerPerfil"
        android:layout_gravity="center"
        android:background="@drawable/gradientbuttonlight"
        android:text="Ver Perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/alertDialogCerrar"
        android:paddingTop="8dp"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:textColor="@color/textColorLight"
        android:text="cerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>