<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androiddesdecero.baseballui.TransitionActivity">

    <ImageView
        android:id="@+id/transitionActivityIvImagen"
        android:transitionName="ivTransition"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_baseball_splash"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:paddingTop="16dp"
        android:text="Transition"
        android:id="@+id/transitionActivityTvImagen"
        android:transitionName="tvTransition"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
