<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.androiddesdecero.baseballui.RegisterActivity">

    <ImageView
        android:id="@+id/registerActivityImageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_baseball_intro2"
        android:tint="@color/colorWhite"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_below="@id/registerActivityImageview"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Register"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/textColorLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            style="@style/RegisterActivityText"
            android:hint="User Name"/>
        <EditText
            style="@style/RegisterActivityText"
            android:hint="Email Address"
            android:inputType="textEmailAddress"/>
        <EditText
            style="@style/RegisterActivityText"
            android:hint="Password"
            android:inputType="textPassword"/>
        <EditText
            style="@style/RegisterActivityText"
            android:hint="Retype Password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/registerActivitySignUp"
            android:layout_marginTop="16dp"
            android:text="Sign Up"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:background="@drawable/gradientbuttonlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/registerActivityLogin"
        android:layout_alignParentBottom="true"
        android:text="Already a member? Log here"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>
